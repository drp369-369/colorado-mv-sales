import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from statsmodels.tsa.arima.model import ARIMA
from pmdarima import auto_arima
from sklearn.metrics import mean_absolute_error, mean_squared_error

%matplotlib inline
plt.rcParams["figure.figsize"] = (12,5)


# --------------------------------------------------------------
# 1. LOAD MODEL-READY DATA
# --------------------------------------------------------------

DATA = "/content/model_ready_sales.csv"   # correct file from phase 3

df = pd.read_csv(DATA, parse_dates=["Date"])
df = df.sort_values("Date")

print("Loaded:", df.shape)
display(df.head())


# --------------------------------------------------------------
# 2. TRAIN / TEST SPLIT
# --------------------------------------------------------------

# last 8 quarters = test
train = df[:-8]
test  = df[-8:]

print("Train size:", train.shape)
print("Test size:", test.shape)


# --------------------------------------------------------------
# 3. BASELINE MODEL (Naive Forecast)
# --------------------------------------------------------------

baseline_pred = train["Sales"].iloc[-1]
baseline_forecast = [baseline_pred] * len(test)

baseline_mae  = mean_absolute_error(test["Sales"], baseline_forecast)
baseline_rmse = np.sqrt(mean_squared_error(test["Sales"], baseline_forecast))

print("\nBaseline Forecast MAE:", baseline_mae)
print("Baseline Forecast RMSE:", baseline_rmse)


# --------------------------------------------------------------
# 4. ARIMA MODEL (Manual)
# --------------------------------------------------------------

arima_model = ARIMA(train["Sales"], order=(2,1,2))
arima_fit = arima_model.fit()

arima_pred = arima_fit.forecast(steps=len(test))

arima_mae  = mean_absolute_error(test["Sales"], arima_pred)
arima_rmse = np.sqrt(mean_squared_error(test["Sales"], arima_pred))

print("\nARIMA MAE:", arima_mae)
print("ARIMA RMSE:", arima_rmse)


# --------------------------------------------------------------
# 5. AUTO-ARIMA (Best Model Automatically)
# --------------------------------------------------------------

auto_model = auto_arima(
    train["Sales"],
    seasonal=True,
    m=4,       # quarterly
    trace=True,
    suppress_warnings=True
)

print("\nBest Auto-ARIMA Order:", auto_model.order)
print("Best Auto-ARIMA Seasonal Order:", auto_model.seasonal_order)

auto_pred = auto_model.predict(n_periods=len(test))

auto_mae  = mean_absolute_error(test["Sales"], auto_pred)
auto_rmse = np.sqrt(mean_squared_error(test["Sales"], auto_pred))

print("\nAuto-ARIMA MAE:", auto_mae)
print("Auto-ARIMA RMSE:", auto_rmse)


# --------------------------------------------------------------
# 6. ACCURACY COMPARISON TABLE
# --------------------------------------------------------------

results = pd.DataFrame({
    "Model": ["Baseline", "ARIMA(2,1,2)", "Auto-ARIMA"],
    "MAE":   [baseline_mae, arima_mae, auto_mae],
    "RMSE":  [baseline_rmse, arima_rmse, auto_rmse]
})

display(results)


# --------------------------------------------------------------
# 7. FINAL FUTURE FORECAST (NEXT 8 QUARTERS)
# --------------------------------------------------------------

full_model = auto_model  # best performer

future_forecast = full_model.predict(n_periods=8)

future_dates = pd.date_range(df["Date"].max(), periods=9, freq="QS")[1:]
forecast_df = pd.DataFrame({
    "Date": future_dates,
    "Forecast_Sales": future_forecast
})

display(forecast_df)


# --------------------------------------------------------------
# 8. PLOT FORECAST
# --------------------------------------------------------------

plt.plot(df["Date"], df["Sales"], label="Historical")
plt.plot(forecast_df["Date"], forecast_df["Forecast_Sales"], label="Forecast", linestyle="--")

plt.title("Motor Vehicle Sales â€” Forecast (Next 8 Quarters)")
plt.xlabel("Date")
plt.ylabel("Sales (USD)")
plt.legend()
plt.grid(True)
plt.show()


# --------------------------------------------------------------
# 9. SAVE FORECAST FILE
# --------------------------------------------------------------

forecast_df.to_csv("/content/final_forecast.csv", index=False)
print("Saved forecast file: final_forecast.csv")

print("\nPHASE 4 COMPLETED SUCCESSFULLY! ðŸš€")
